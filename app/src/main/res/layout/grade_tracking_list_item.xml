<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark"
    android:shrinkColumns="*"
    android:layout_marginBottom="20dp">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:background="@drawable/tabitem_selected"
            android:textSize="15sp"
            android:id="@+id/name_subject"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Giải tích"
            android:textColor="@color/paragraph_color"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:clickable="true"
            android:maxLines="1"
            android:ellipsize="end"
            />
        <TextView
            android:textSize="15sp"
            android:id="@+id/number_credits"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/paragraph_color"
            android:gravity="center"
            android:layout_gravity="bottom"
            />
        <TextView
            android:textSize="15sp"
            android:id="@+id/point_rollUp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:gravity="center"
            android:textColor="@color/paragraph_color"
            android:layout_gravity="bottom"
            />
        <TextView
            android:textSize="15sp"
            android:id="@+id/point_assignment"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:gravity="center"
            android:textColor="@color/paragraph_color"
            android:layout_gravity="bottom"
            />
        <TextView
            android:textSize="15sp"
            android:id="@+id/point_midterm"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:gravity="center"
            android:textColor="@color/paragraph_color"
            android:layout_gravity="bottom"
            />
        <TextView
            android:textSize="15sp"
            android:id="@+id/point_endofterm"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="10"
            android:gravity="center"
            android:textColor="@color/paragraph_color"
            android:layout_gravity="bottom"
            />
        <TextView
            android:textSize="15sp"
            android:id="@+id/point_10"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:textColor="@color/paragraph_color"
            android:layout_gravity="bottom"
            android:gravity="center"
            />
        <TextView
            android:textSize="15sp"
            android:id="@+id/point_word"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="A"
            android:textColor="@color/paragraph_color"
            android:layout_gravity="bottom"
            android:gravity="center"
            />
    </TableRow>
</TableLayout>