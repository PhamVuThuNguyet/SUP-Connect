<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    app:menu="@menu/bottom_bar_menu">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <RelativeLayout
                android:id="@+id/relativelayout3_leave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:visibility="gone">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    >
                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/chipGroup"
                        ></com.google.android.material.chip.ChipGroup>
                </HorizontalScrollView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/txt_Class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Lớp học phần"
                    android:textColor="@color/title_color"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"
                    android:textStyle="normal" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="150dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_function_spinner"
                    android:gravity="end">

                    <Spinner
                        android:id="@+id/spinner_add_class"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:entries="@array/notification"
                        android:gravity="center_horizontal"
                        android:spinnerMode="dialog"
                        android:textAlignment="center"
                        android:textColor="@color/paragraph_color" />
                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativelayout"
                android:padding="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativelayout"
                >
                <TextView
                    android:id="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/title_color"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Tiêu đề"
                    android:textSize="18dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edt_notification"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_below="@+id/title1"
                    android:layout_centerVertical="true"
                    android:gravity="end">
                    <EditText
                        android:id="@+id/title_notification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/paragraph_color"></EditText>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linear_title">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/title_color"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Nội dung"
                    android:textSize="18dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edt_notification"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_below="@+id/linear_title"
                    android:gravity="end">
                    <EditText
                        android:id="@+id/content_notification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="3"
                        android:textColor="@color/paragraph_color"></EditText>

                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/relativelayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linear_content">
                <Button
                    android:id="@+id/btn_chooseDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chọn ngày"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/txt_btn_inputscore_selector"
                    android:textSize="18sp"
                    android:background="@drawable/bg_btn_notification"
                    app:backgroundTint="@color/btn_selector_notification"
                   />
                <EditText
                    android:id="@+id/edt_date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/paragraph_color"
                    android:layout_marginEnd="15dp"
                    android:layout_toEndOf="@+id/btn_chooseDate"
                    android:background="@drawable/bg_edt_notification"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativelayout1"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativelayout1"
                >
                <Button
                    android:id="@+id/btn_yes_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xác nhận"
                    android:textColor="@color/txt_btn_inputscore_selector"
                    android:textSize="20sp"
                    android:background="@drawable/bg_btn_notification"
                    app:backgroundTint="@color/btn_selector_notification"
                    android:layout_marginHorizontal="50dp"/>
                <Button
                    android:id="@+id/btn_no_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/btn_yes_notification"
                    android:layout_toRightOf="@+id/btn_yes_notification"
                    android:text="Hủy"
                    android:textColor="@color/txt_btn_inputscore_selector"
                    android:textSize="20sp"
                    android:background="@drawable/bg_btn_notification"
                    app:backgroundTint="@color/btn_selector_notification"
                    />
            </RelativeLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>